<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/my_offer_row" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView android:id="@+id/description"
		android:layout_alignParentTop="true" android:text=""
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_alignParentLeft="true" android:textStyle="bold"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />

	<TextView android:id="@+id/startTime" android:layout_below="@id/description"
		android:text="" xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_alignParentLeft="true" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

	<TextView android:id="@+id/endTime" android:layout_below="@id/startTime"
		android:text="" xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_alignParentLeft="true" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

	<TextView android:id="@+id/offerId" android:layout_below="@id/endTime"
		android:text="" xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_alignParentLeft="true" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

</RelativeLayout>



